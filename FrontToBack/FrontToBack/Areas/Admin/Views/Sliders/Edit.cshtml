@model FrontToBack.Models.Slider

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Create", "Sliders", FormMethod.Post, new { ectype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

